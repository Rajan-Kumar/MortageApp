@model IEnumerable<MortgageViewModel>

@{
    ViewData["title"] = "Index";
}

<h1>Mortgage List</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Mortgage List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Mortgage" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp;  New Mortgage</a>
        </div>
    </div>
    <br/><br/>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Mortgage Name</th>
                <th>InterestRepayment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="50%">@obj.InterestRepayment</td>
                </tr>
            }
        </tbody>
    </table>
</div>